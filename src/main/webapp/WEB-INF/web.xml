<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>by.jwd.testsys.controller.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/test</url-pattern>
  </servlet-mapping>



  <servlet>
    <servlet-name>AjaxLogicController</servlet-name>
    <servlet-class>by.jwd.testsys.controller.AjaxLogicController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AjaxLogicController</servlet-name>
    <url-pattern>/ajax</url-pattern>
  </servlet-mapping>



  <filter>
    <filter-name>CharsetFilter</filter-name>
    <filter-class>by.jwd.testsys.logic.util.CharsetFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharsetFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
 </web-app>